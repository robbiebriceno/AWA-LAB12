generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL")
}

model Author {
  id          String   @id @default(cuid())
  name        String
  email       String   @unique
  bio         String?
  nationality String?
  birthYear   Int?
  books       Book[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Book {
  id           String   @id @default(cuid())
  title        String
  description  String?
  isbn         String?  @unique
  publishedYear Int?
  // Cambiado de Int? a String? para soportar g√©neros nominales ("Novela", "Cuento", etc.)
  genre        String?
  pages        Int?
  authorId     String
  author       Author   @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([authorId])
  @@index([genre])
  @@index([title])
}